
<%= render :partial => "partials/breadcrumbs" %>

    <ul id="top_menu">
        <% if @current_folder %>
            <li>
                <%= link_to  new_sub_file_path(@current_folder) do %>
                    <i class="material-icons">create_new_folder</i>        
                    <span>New Folder</span>
                <% end %>
            </li>
            <li>
                <%= link_to  new_sub_folder_path(@current_folder) do %>
                    <i class="material-icons">file_upload</i>
                    <span>Upload File</span>
                <%end%>
            </li>
            <% else %>
                <li>
                    <%= link_to  new_asset_path do %>
                        <i class="material-icons">file_upload</i>                    
                        <span> Upload File</span>
                    <%end%>
                </li>
                <li>
                    <%= link_to  new_folder_path do  %>
                        <i class="material-icons">create_new_folder</i>
                        <span> New Folder</span>
                    <%end%>
                </li>
                <% end %>
    </ul>
    <div class="asset_list">
        <!-- Listing Folders -->
        <% @folders.each do |folder| %>
            <i class="material-icons">folder</i>  
            <div class="asset_details folder">      
                <div class="file_name">
                    <%= link_to folder.name, browse_path(folder) %>
                </div>
                <div class="actions">
                    <div class="rename">
                        <%= link_to "Rename",rename_folder_path(folder) %>
                    </div>
                    <div class="delete">
                        <%= link_to "Delete", folder, :confirm => 'Are you sure to delete the folder and all of its contents?', :method => :delete %>
                    </div>
                </div>
            </div>
            <% end %>
                <!-- Listing Files -->
            <% @assets.each do |asset| %>
            <i class="material-icons">insert_drive_file</i>
            <div class="asset_details file">
                <div class="file_name">
                    <%= link_to asset.file_name, download_url(asset) %>
                 </div>
                <div class="actions">
                    <div class="download">
                    <%= link_to "Download", download_url(asset) %>
                    </div>
                    <div class="delete">
                     <%= link_to "Delete", asset, :confirm => 'Are you sure?', :method => :delete %>
                    </div>
                 </div>
            </div>
            <% end %>
    </div>